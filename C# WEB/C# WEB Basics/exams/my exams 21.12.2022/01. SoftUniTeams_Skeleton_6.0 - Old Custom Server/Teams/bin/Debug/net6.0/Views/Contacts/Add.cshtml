<h1 class="text-center">Add a Contact</h1>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label for="first-name-input" class="form-label">First Name</label>
                <input name="FirstName" type="text" class="form-control" id="first-name-input" />
            </div>
            <div class="mb-3">
                <label for="last-name-input" class="form-label">Last Name</label>
                <input name="LastName" type="text"  class="form-control" id="last-name-input" />
            </div>
            <div class="mb-3">
                <label for="email-input" class="form-label">E-mail</label>
                <input name="Email" type="text"  class="form-control" id="email-input" />
            </div>
            <div class="mb-3">
                <label for="phone-number-input" class="form-label">Phone Number</label>
                <input name="PhoneNumber" type="text"  class="form-control" id="phone-number-input" />
            </div>
            <div class="mb-3">
                <label for="address-input" class="form-label">Address</label>
                <input name="Address" type="text"  class="form-control" id="address-input" />
            </div>
            <div class="mb-3">
                <label for="website-input" class="form-label">Website</label>
                <input name="Website" type="text" class="form-control" id="website-input" />
            </div>
            <div class="mb-3 text-center">
                <button class="mb-3 text-center btn btn-primary" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>