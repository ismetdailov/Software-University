<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/style.css">
    <title>SoftUni Teams</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand">SoftUni Teams</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    {{if(IsAuthenticated)}}
                    {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Contacts/All">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Contacts/Add">Add a Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Contacts/Team">My Team</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        
                        <li>
                            <a class="nav-link text-dark" href="/Users/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
                }
                {{else}}
                {
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/">Home</a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Users/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/Users/Register">Register</a>
                    </li>
                </ul>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            {{RenderBody}}
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SoftUni Teams
        </div>
    </footer>
</body>
</html>